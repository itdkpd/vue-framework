{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss",
    "stylelint-config-standard-vue"
  ],
  "plugins": ["@stylistic/stylelint-plugin", "stylelint-rem-over-px"],
  "rules": {
    "@stylistic/indentation": 2,
    "number-max-precision": 20,
    "rem-over-px/rem-over-px": true,
    "declaration-block-no-redundant-longhand-properties": null,
    "declaration-property-value-disallowed-list": [
      {
        "/.*/": ["/^#(?:[0-9a-fA-F]{3}|[0-9a-fA-F]{6})$/"]
      },
      {
        "message": "Hex color codes are not allowed. Use variables instead. You can check here src/assets/styles/_colors.scss"
      }
    ],
    "selector-class-pattern": [
      "^[a-z0-9]+(?:-[a-z0-9]+)*(?:__(?:[a-z0-9]+(?:-[a-z0-9]+)*))?(?:--(?:[a-z0-9]+(?:-[a-z0-9]+)*))?$",
      {
        "severity": "warning",
        "message": "Class names must follow BEM: block__element--modifier (lowercase, hyphenated)"
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "forward", "mixin", "include"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/assets/styles/_colors.scss"],
      "rules": {
        "declaration-property-value-disallowed-list": null
      }
    }
  ],
  "ignoreFiles": ["/node_modules/*", "**/*.js", "/dist/*", "/public/*"]
}
